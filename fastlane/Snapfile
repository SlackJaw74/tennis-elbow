# Snapfile for fastlane snapshot
# More info: https://docs.fastlane.tools/actions/snapshot/

# List of devices to generate screenshots for
# Using older device types to match App Store Connect requirements
devices([
  "iPhone 11 Pro Max",      # Produces 1242x2688 screenshots (App Store requirement)
  "iPhone 12 Pro Max",      # Produces 1284x2778 screenshots (App Store requirement)
  "iPad Pro 13-inch (M5)"   # iPad Pro - if supporting iPad
])

# List of languages to generate screenshots for
languages([
  "en-US"
  # Add more languages as needed:
  # "es-ES",
  # "fr-FR",
  # "de-DE"
])

# The name of the scheme which contains the UI Tests
scheme("TennisElbow")

# Where should the resulting screenshots be stored?
output_directory("./fastlane/screenshots")

# Clear all previously generated screenshots before creating new ones
clear_previous_screenshots(true)

# Remove the '#' to clear all previously generated screenshots before creating new ones
override_status_bar(true)

# Arguments to pass to the app on launch
# launch_arguments(["-skipOnboarding"])

